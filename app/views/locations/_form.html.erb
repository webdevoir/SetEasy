  <div class="container">

      <%= form_for @location  do |f| %>
        <div>
          <%= f.label :name, "Name" %><br>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
            <div>
          <%= f.label :street %><br>
          <%= f.text_field :street, placeholder: "Street", class: 'form-control exam_forms' %>
         </div>
          <div>
          <%= f.label :city %><br>
          <%= f.text_field :city, class: 'form-control', class: 'form-control exam_forms' %>
        </div>
        <div>
          <%= f.label :postal %><br>
          <%= f.text_field :postal, class: 'form-control exam_forms' %>
        </div>
        <div>
          <%= f.label :province %><br>
          <%= f.text_field :province, class: 'form-control exam_forms' %>
        </div>
         <div>
          <%= f.radio_button :interior, true, :checked => true , :value => true %>
          <%= label :interior, "Interior" %>
        </div>
          <div>
               <%= f.radio_button :interior, false, :value => false%> 
               <%= label :interior, "Exterior"%>      
          </div>
        <div>
          <%= f.submit "Submit", class: 'form-control exam_forms' %> 
        </div>
      <% end %>
    </div>
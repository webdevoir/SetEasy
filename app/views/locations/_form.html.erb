  <div class="container">

      <% if @location.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@location.errors.count, "error") %> prohibited this location from being created:</h2>

      <ul>
      <% @location.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  

      <%= form_for @location  do |f| %>
        <div>
          <%= f.label :name, "Name" %><br>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
            <div>
          <%= f.label :street %><br>
          <%= f.text_field :street, placeholder: "Street", class: 'form-control exam_forms' %>
         </div>
          <div>
          <%= f.label :city %><br>
          <%= f.text_field :city, class: 'form-control', class: 'form-control exam_forms' %>
        </div>
        <div>
          <%= f.label :postal %><br>
          <%= f.text_field :postal, class: 'form-control exam_forms' %>
        </div>
        <div>
          <%= f.label :province %><br>
          <%= f.text_field :province, class: 'form-control exam_forms' %>
        </div>
         <div>
           <%= f.label :interior, "Interior or Exterior"%> 
           <%= f.select :interior, ["INT" , "EXT", "INT/EXT"], {}, class: "form-control exam_forms" %>
        <div>
          <%= f.submit "Submit", class: 'form-control exam_forms' %> 
        </div>
      <% end %>
    </div>
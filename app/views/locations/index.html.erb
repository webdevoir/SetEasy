<meta name="pdfkit-orientation" content="Landscape"/>
<div class="container-fluid content_dashboard">
<%= render 'layouts/pdf_header' %>
<h1 class="pdf_only">Set List for <%= @project.name if @project %></h1>

<div class="no_pdf">
    <%= link_to "Add a Set", new_location_path, data: {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#remote_container'}, class: "btn btn-primary exam_button", style: "width:auto;float: left"  %>
    <%= link_to "Download PDF", pdfs_locations_path(format: "pdf"), target: :_blank, class: "btn btn-primary exam_button", style: "width:auto;float: left"  %>
    </div>
  <br />
  <br />
   <div class="table-responsive">
     
    <table class="table">
      <tr>

  <!--     	<th>ID #</th> -->
        <th>Set #</th>
        <th>INT/EXT</th>
        <th>Set Name</th>
        
        <th>City</th>
        <th>Location</th>
        <th>Shoot Dates</th>

        
        <th class="no_pdf">Manage</th>
        
      </tr>

       <% @locations.each do |location|  %>
      <tr>
        <td><%= location.id %></td>
        <td><%= location.interior %></td>


        <td><%= location.name %></td>

        <% if location.city && location.city.length > 1 %>
          <td><%= location.city %></td>
        <% else %>
          <td>Not Available</td>
        <% end %>

        <% if location.street && location.street.length > 1 %>
          <td><%= location.street %></td>
        <% else %>
          <td>Not Available</td>
        <% end %>
        <td>Under Construction</td>
       

        <td class="no_pdf">(<%= link_to "edit", edit_location_path(location), data: {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#remote_container'} %>, <%= link_to "delete", location_path(location), method: :delete, data: {confirm: "Are you sure you want to delete #{location.id}?"} %>)</td>
   
      </tr>
      <% end %>

    </table>
  </div>
  
            <hr>
</div>
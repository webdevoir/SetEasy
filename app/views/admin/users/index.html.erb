<%= render 'admin/header' %>
<div class="container-fluid content_dashboard">
<%= link_to "Add User", new_admin_user_path, class: "btn btn-primary exam_button", style: "width:auto;float: left"  %>
  <br />
  <br />
  <div class="table-responsive">
    <table class="table table-hover">
      <tr>
      
        <th>Email</th>

        <th>Role</th>
        <th>Last Seen</th>
        <th>Logged In</th>
        <th>Sign Up</th>
        <th>Updated</th>
        <th>ID #</th>
        <th>Manage</th>
      </tr>

       <% @users.each do |user|  %>
      <tr>

        <td><%= user.email %></td>

        <td><%= user.role %></td>
        <td><%= user.last_sign_in_at ? user.last_sign_in_at.strftime("%b %d, %Y") : "not logged"  %></td>
        <td><%= user.current_sign_in_at ? "true" : "false" %></td>
        <td><%= user.created_at.strftime("%b %d, %Y")  %></td>
        <td><%= user.updated_at.strftime("%b %d, %Y")  %></td>
        <td><%= user.id%></td>
        <td>(<%= link_to "edit", edit_admin_user_path(user) %>, <%= link_to "delete", admin_user_path(user), method: :delete, data: {confirm: "Are you sure you want to delete #{user.id}?"} %>)</td>
      </tr>
      <% end %>

    </table>
  </div>
  <div style="clear: both">
                <%= paginate @users if @users %>
                <%= page_entries_info @users if @users %>
            </div>
            <hr>
</div>
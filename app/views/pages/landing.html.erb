<div class="landing-bg">

	<div class="landing-text">
		

	<div class="login_container" id="email-collect-container">
  

     <%= form_for :email_list, :url=>{ :controller => :email_lists, :action => :create}, :html => {:id => "email-collect-form"} do |f| %>
     <%= link_to (image_tag "SetLogo_trans.png", id: "landing-logo"), new_user_session_path %></br>
    <span>Coming Soon!</span>
                <h3 class="text-center"><strong>Follow us for updates!</strong></h2>

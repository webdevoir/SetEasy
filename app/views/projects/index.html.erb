
<div class="container-fluid content_dashboard">


<div class="row no_pdf">
  <%= link_to "Add Project ", new_project_path, data:  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#remote_container'}, class: "btn btn-primary exam_button", style: "width:auto;"  %>
  
  <!--       <%= link_to "Download PDF", projects_path(format: "pdf"), target: :_blank, class: "btn btn-primary exam_button", style: "width:auto;float: left"  %> -->




  </div>


  <br />
  <br />
    <table class="table">
      <tr>

        <th>Name</th>
        <th>Users</th>
        
        <th>Budget</th>
        <th>Dates</th>
        <th>Production Company</th>


 
        <th class="no_pdf">Manage</th>
      </tr>

       <% @projects.each do |project|  %>
      <tr>
  
    <!--     <td><%= link_to project.name, project_path(project) %></td> -->
        <td><%= link_to project.name, project %></td>
        
        <td><%= link_to "view", project %></td>
        <td><%= number_to_currency(project.budget) %></td>
        <td>DATES</td>
        <% if project.company %>
          <td><%= project.company.titleize %></td>
        <% else %>
          <td>N/A</td>
        <% end %>
       <td class="no_pdf">(<%= link_to "edit", edit_project_path(project), data:  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#remote_container'} %>, <%= link_to "delete", project_path(project), method: :delete, data: {confirm: "Are you sure you want to delete #{project.id}?"} %>)</td>
      <% end %>

    </table>
  
    <% if current_project %>
      <script>
        $( function() {
          var row = $('tr').eq(1);
          row.addClass("project-highlight")
          console.log("First Row Script");
          console.log(row);
        });
      </script>
    <% end %>
          
</div>